{
    "type": "project",
    "license": "MIT",
    "name": "arslanoov/messenger-api",
    "description": "",
    "require": {
        "php": ">=8.0",
        "ext-ctyp": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "beberlei/assert": "^3.3",
        "composer/package-versions-deprecated": "1.11.99.1",
        "doctrine/doctrine-bundle": "^2.2",
        "doctrine/doctrine-migrations-bundle": "^3.0",
        "doctrine/orm": "^2.8",
        "nyholm/psr7": "^1.4",
        "ramsey/uuid": "^4.1",
        "symfony/console": "5.2.*",
        "symfony/dotenv": "5.2.*",
        "symfony/event-dispatcher": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/framework-bundle": "5.2.*",
        "symfony/proxy-manager-bridge": "5.2.*",
        "symfony/serializer": "5.2.*",
        "symfony/validator": "5.2.*",
        "symfony/yaml": "5.2.*",
        "trikoder/oauth2-bundle": "3.1.*"
    },
    "require-dev": {
        "composer/semver": "^1.0",
        "dms/phpunit-arraysubset-asserts": "^0.2.1",
        "doctrine/doctrine-fixtures-bundle": "^3.4",
        "nunomaduro/phpinsights": "^1.14",
        "overtrue/phplint": "^2.3",
        "phpstan/phpstan": "^0.12.81",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/browser-kit": "5.2.*",
        "symfony/css-selector": "5.2.*",
        "symfony/phpunit-bridge": "^5.2",
        "vimeo/psalm": "^4.6",
        "zircote/swagger-php": "^3.1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Domain\\": "src/Domain/",
            "Exception\\": "src/Exception/",
            "User\\": "src/User/",
            "Test\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "lint": "phplint",
        "cs": "phpcs",
        "cs-fix": "phpcbf",
        "psalm": "psalm",
        "stan": "php -d memory_limit=4G vendor/bin/phpstan analyse src --level 8",
        "php-insights": "vendor/bin/phpinsights analyse src",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/test/coverage",
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "5.2.*"
        }
    }
}
